{
  "name": "DataSync",
  "templateType": "spark",
  "templateGroup": "dataIntegration",
  "operator": {
    "name": "spark-operator",
    "description": "Spark Operator",
    "className": "com.miotech.kun.workflow.operator.SparkOperator"
  },
  "displayParameters": [
    {
      "name": "sourceDataSource",
      "type": "datasource",
      "required": true,
      "displayName": "Source datasource"
    },
    {
      "name": "sourceDatasetName",
      "type": "string",
      "required": true,
      "displayName": "Source dataset name"
    },
    {
      "name": "targetDataSource",
      "type": "datasource",
      "required": true,
      "displayName": "Target datasource"
    },
    {
      "name": "targetDatasetName",
      "type": "string",
      "required": true,
      "displayName": "Target dataset name"
    },
    {
      "name": "writeMode",
      "type": "string",
      "required": true,
      "displayName": "write mode"
    },
    {
      "name": "globalIdFields",
      "type": "string",
      "required": false,
      "displayName": "Field names to generate globalId"
    },
    {
      "name": "idField",
      "type": "string",
      "required": false,
      "displayName": "Field use in update/upsert"
    },
    {
      "name": "preScript",
      "type": "text",
      "required": false,
      "displayName": "Script before sync"
    },
    {
      "name": "postScript",
      "type": "text",
      "required": false,
      "displayName": "Script after sync"
    }
  ],
  "defaultValues": {
    "args": "-c com.miotech.spark.etl.operator.DataSyncOperator",
    "jars": "${ spark.listener.jar }",
    "files": "${ dataplatform.datasync.jar }",
    "livyHost": "${ dataplatform.livy.host }",
    "sparkConf": "{\"spline.hdfs_dispatcher.address\":\"${ spark.hadoop.spark.hdfs.address }\"}",
    "variables": "{}",
    "application": "com.miotech.spark.etl.Application"
  },
  "renderClassName": "com.miotech.kun.dataplatform.common.tasktemplate.renderer.SparkConfigTaskTemplateRender"
}