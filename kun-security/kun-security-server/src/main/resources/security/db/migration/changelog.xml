<changelog xmlns="http://www.liquigraph.org/schema/1.0/liquigraph.xsd">
    <changeset id="init-root-resource" author="jiechen">
        <query>CREATE (n:RESOURCE {id: 0, name:'ROOT_RESOURCE'}) RETURN n</query>
    </changeset>
    <changeset id="create-constraint-on-resource-id" author="jiechen">
        <query>CREATE CONSTRAINT ON (res:RESOURCE) ASSERT res.id IS UNIQUE</query>
    </changeset>
    <changeset id="create-constraint-on-resource-name" author="jiechen">
        <query>CREATE CONSTRAINT ON (res:RESOURCE) ASSERT res.name IS UNIQUE</query>
    </changeset>
    <changeset id="create-constraint-on-user-id" author="jiechen">
        <query>CREATE CONSTRAINT ON (u:USER) ASSERT u.id IS UNIQUE</query>
    </changeset>
    <changeset id="create-constraint-on-user-name" author="jiechen">
        <query>CREATE CONSTRAINT ON (u:USER) ASSERT u.name IS UNIQUE</query>
    </changeset>
    <changeset id="create-constraint-on-permission-id" author="jiechen">
        <query>CREATE CONSTRAINT ON (p:HAS_PERMISSION) ASSERT p.id IS UNIQUE</query>
    </changeset>
</changelog>